<html>
<body onload="myfunction()">
  <head>
    <link rel="stylesheet" href="/css/search.css">
  </head>

        
        <div class="topnav">
            <a class="active" href="/">Home</a>
            <a href="/user">Account</a>
            <a href="/add">Add</a>
            <div class="search-container">
        
                <input type="text" placeholder="Search.."  id="myInput">
                <button onClick="getInputValue()" >Search</button>
        
            </div>
        </div>
    <br>
<div style="margin-left: 50px;">
    <h1><%=id%></h1>
</div>

<div class="div">
    <h3><%=first%></h3>  



    <h3><%=second%></h3>

</div>

<div class="div">
    <p id="first" ></p>

    
    <p id="second" ></p>

    
</div>

<div class="div" style="margin-left: 570px; margin-right:570px" >
    <button class="first">Vote</button>
    <button class="second">Vote</button>
</div>

<div style="text-align:center">
    <p id="total" ></p>
</div>

<script>
        function myfunction() {
        var vote1 = "<%=votefirst%>"
        var vote2 = "<%=votesecond%>"
        var total = Number(vote1) + Number(vote2)
        if (total == 0){
            document.getElementById("first").innerHTML = "No Votes"
            document.getElementById("second").innerHTML = "No Votes"
        }
        else {
        console.log(vote1)
        console.log(vote2)
        console.log(total)
        var votefir = Number(vote1) / Number(total)
        var votefirst = votefir * 100
        document.getElementById('first').innerHTML = Math.round(votefirst)+"%"

        var votesec = vote2 / total
        var votesecond = votesec * 100
        document.getElementById('second').innerHTML = Math.round(votesecond)+"%"

        document.getElementById('total').innerHTML = "Total votes:"+total
        
    }

}
function getInputValue() {
                    
                    var inputVal = document.getElementById("myInput").value;
                        
                        window.location.href = "http://localhost:3000/Search/"+inputVal;
                }
</script>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
    $(document).ready(function(){
        $('.first').click(function(){           	
        $.post( "/search/<%=id%>", { status: "first"} );
        location.reload();


        })
})
$(document).ready(function(){
        $('.second').click(function(){           	
        $.post( "/search/<%=id%>", { status: "second"} );
        location.reload();


        })
})
</script>

</body>
</html>